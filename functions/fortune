# vim: filetype=zsh tabstop=4 textwidth=72 noexpandtab

# SYNOPSIS: Wrapper if stdout is a terminal

emulate -L zsh
setopt local_options local_traps pipe_fail bsd_echo

needs fortune

(($#))|| set -- all

if [[ -t 1 ]]; then
	needs cowsay lolcat
	command fortune "$@" | cowsay -n | lolcat
else
	command fortune "$@"
fi


