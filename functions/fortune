# SYNOPSIS: Wrapper if stdout is a terminal

emulate -L zsh
setopt local_options local_traps pipe_fail bsd_echo

needs fortune

if [[ -t 1 ]]; then
	needs cowsay lolcat
	command fortune "$@" | cowsay | lolcat
else
	command fortune "$@"
fi


