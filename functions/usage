#!/usr/bin/env zsh
# $Id: usage,v 1.4 2016/10/25 07:47:28 tw Exp $
# vim: filetype=zsh tabstop=4 textwidth=72 noexpandtab

emulate -L zsh

[[ $# -eq 0 ]] && set '%F{251}[No message provided.]%f'

print -Plu 2 "  %F{4}Usage%f: $1" "         ${(@)^argv[2,-1]}"

errno=0
kill -SIGINT $$

