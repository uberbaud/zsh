# $Id: :x11-get-winid-from-pid,v 1.2 2016/06/04 23:38:47 tw Exp tw $
# vim: filetype=zsh tabstop=4 textwidth=72 noexpandtab

emulate -L zsh

function widFromPid {
	$SYSLOCAL/bin/xdotool search --all --pid $1 --name "^$HOST \\("
}

typeset -i pid=$1
typeset -i wid=$( widFromPid $pid )
while (( $wid == 0 )); do
	pid=$( /bin/ps -o 'ppid=' -p $pid )
	(( $pid )) || return 1
	wid=$( widFromPid $pid )
done

print $wid
return 0

