# vim: filetype=zsh tabstop=4 textwidth=72 noexpandtab

# SYNOPSIS: Use $0 to determine actual script file.

emulate -L zsh
setopt local_options local_traps pipe_fail bsd_echo

[[ $1 == */* ]]|| {
	set =$1 # called without a path, so use $PATH
	[[ -n $1 ]]|| return 1
  }

readlink -f $1


