# system wide ZSHELL file that is ALWAYS called

if [[ -d ~/.config ]]; then
	XDG_CONFIG_HOME=~/.config
	if [[ -f $XDG_CONFIG_HOME/user-dirs.dirs ]]; then
		. $XDG_CONFIG_HOME/user-dirs.dirs
	fi
	typeset -xm 'XDG_*'

	if [[ -d $XDG_CONFIG_HOME/zsh ]]; then
		ZDOTDIR=$XDG_CONFIG_HOME/zsh
	fi
fi

